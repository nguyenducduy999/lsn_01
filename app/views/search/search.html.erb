<%= form_tag search_path, method: :get do %>
  <p>
    <%= label_tag t("search_for") %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag t("search"), name: nil %>
  </p>
<% end %>

<ul>
  <% @questions.each do |question| %>
    <li>
      <h3>
        <%= link_to question.title, question_path(question._id) %>
      </h3>
    </li>
  <% end %>
</ul>
